@{
    ViewData["Title"] = "New Movie";
}
@model MovieEntryForm


<h1>New Movie Form</h1><br />
@*html form to save new movies to db*@
<form method="post">
    <label>Category:</label>
    <select id="category" asp-for="Category" required>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Supense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
    </select><br /><br />

    <label>Title:</label>
    <input id="title" placeholder="i.e. Cars" asp-for="Title" required/><br /><br />

    <label>Year:</label>
    <input type="number" id="year" placeholder="i.e. 2006" asp-for="Year" required/><br /><br />

    <label>Director:</label>
    <input id="director" placeholder="i.e. John Lasseter" asp-for="Director" required/><br /><br />

    <label>Rating:</label>
    <select id="rating" asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br /><br />

    <label>Edited:</label>
    <select id="edited" asp-for="Edited">
        <option value="No">No</option>
        <option value="Yes">Yes</option>
    </select><br /><br />

    <label>Lent to:</label>
    <input id="lent" placeholder="i.e. John Doe" asp-for="LentTo" /><br /><br />

    <label>Notes:</label>
    <textarea id="notes" maxlength="25" asp-for="Notes"></textarea><br /><br />

    <button type="submit">Save Movie</button>
</form>
