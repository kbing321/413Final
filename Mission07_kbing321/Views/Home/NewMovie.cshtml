@{
    ViewData["Title"] = "Movie Entry";
}
@model MovieEntryForm

<h1>Movie Entry Form</h1><br />
@*html form to save new movies to db*@
<form method="post">
    <div asp-validation-summary="All"></div>

    @*hidden movieid field to correlate movie with database record*@
    <input asp-for="MovieId" hidden />

    <label>Category:</label>
    <select id="category" asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select><br /><br />

    <label>Title:</label>
    <input id="title" placeholder="i.e. Cars" asp-for="Title" /><br /><br />

    <label>Year:</label>
    <input type="number" id="year" placeholder="i.e. 2006" asp-for="Year" /><br /><br />

    <label>Director:</label>
    <input id="director" placeholder="i.e. John Lasseter" asp-for="Director" /><br /><br />

    <label>Rating:</label>
    <select id="rating" asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br /><br />

    <label asp-for="Edited">Edited:</label>
    <select id="edited" asp-for="Edited">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select><br /><br />

    <label>Lent to:</label>
    <input id="lent" placeholder="i.e. John Doe" asp-for="LentTo" /><br /><br />

    <label>Notes:</label>
    <textarea id="notes" maxlength="25" asp-for="Notes"></textarea><br /><br />

    <button type="submit" class="btn-primary">Save Movie</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-danger">Cancel</a>
</form>
